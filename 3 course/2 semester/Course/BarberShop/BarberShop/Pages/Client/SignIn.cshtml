@page
@model BarberShop.Pages.Client.SignInModel
@{
    Layout = "_Layout";
}

<div>Войти в качестве клиента:</div>

<form method="POST">
    <label>Введите логин:</label>
    <input type="text" name="username"  required/>
    <label>Введите пароль:</label>
    <input type="password" name="password"  required/>
    <input type="submit" asp-page-handler="Submit" value="Войти" />
</form>

<div>
    <p><a asp-page="/Client/Create">Зарегистрироваться</a></p>
</div>

<div>
    <p><a asp-page="/Index">Назад</a></p>
</div>
