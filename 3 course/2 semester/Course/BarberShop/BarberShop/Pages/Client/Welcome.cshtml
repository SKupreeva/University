@page
@model BarberShop.Pages.Client.WelcomeModel
@{
    Layout = "ClientLayout";
}

<h2>Добро пожаловать!</h2>
<h4>Ваш профиль</h4>
<div>

    @if (Model.client == null)
    {
        <p>Информация не найдена!</p>
    }
    else
    {
        <table>
            <tr>
                <th>Логин</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Стилист</th>
                <th></th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.client.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.client.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.client.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.stylist.username)
                </td>
            </tr>
        </table>
    }

</div>